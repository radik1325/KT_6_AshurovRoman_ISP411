<Page x:Class="Pet_shop_AshurovISP411.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_shop_AshurovISP411.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС-Товары для животных, страница авторизации" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="5" FontSize="15"></TextBlock>
            <TextBlock Text="Логин" HorizontalAlignment="Center" Margin="5"></TextBlock>
            <TextBox x:Name="LoginBox" Margin="5" TextWrapping="Wrap"></TextBox>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" Margin="5"></TextBlock>
            <PasswordBox x:Name="ParolBox" Margin="5"></PasswordBox>

            <Button x:Name="VxodButoon" Click="VxodButoon_Click" Content="Войти" Margin="5" ></Button>
        </StackPanel>
    </Grid>
</Page>
