<Window x:Class="Pet_shop_AshurovISP411.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pet_shop_AshurovISP411"
        mc:Ignorable="d"
        Title="{Binding ElementName=NewFrame,Path=Content.Title}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Background="#FF76E383" Grid.Row="0">
            <Image Source="/Resources/logo.png" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="120,0,0,0"/>
            <TextBlock Text="ИС-Товары для животных" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"></TextBlock>
        </Grid>

        <Frame x:Name="NewFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
